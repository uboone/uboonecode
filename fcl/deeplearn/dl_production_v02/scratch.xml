<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release      "v06_26_01_03" >
<!ENTITY file_type    "mc"        >
<!ENTITY run_type     "physics"   >
<!ENTITY name         "dlprod_mcc8_cosmic">
<!ENTITY gen_fcl      "prodcosmics_corsika_cmc_uboone.fcl">
<!ENTITY g4_fcl       "standard_g4_spacecharge_uboone.fcl">
<!ENTITY detsim_fcl   "standard_detsim_uboone.fcl">
<!ENTITY litefile_fcl "dlprod_mcc8_litefile.fcl">
<!ENTITY dl_version   "v02"       >
<!ENTITY dl_part      "p00"       >
<!ENTITY tardir       "/pnfs/uboone/scratch/users/kterao/tars">
]>

<job>

<project name="&name;">

  <!-- Project size -->
  <numevents>20000</numevents>

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Larsoft information -->
  <larsoft>
    <tag>&release;</tag>
    <qual>e10:prof</qual>
    <local>&tardir;/dl_&dl_version;_lar_&release;_&file_type;.tar</local>
  </larsoft>

  <!-- Project stages -->
  <stage name="litefile">
    <fcl>&litefile_fcl;</fcl>
    <inputlist>flist_cosmics.txt</inputlist>
    <outdir>/pnfs/uboone/scratch/users/kterao/&name;_&dl_version;_&dl_part;/&release;/litefile</outdir>
    <logdir>/pnfs/uboone/scratch/users/kterao/&name;_&dl_version;_&dl_part;_log/&release;/litefile</logdir>
    <workdir>/pnfs/uboone/scratch/users/kterao/&name;_&dl_version;_&dl_part;_work/&release;/litefile</workdir>
    <numjobs>393</numjobs>
    <memory>4000</memory>
    <datatier>litefile</datatier>
    <resource>DEDICATED,OPPORTUNISTIC</resource>
    <defname>&name;_&dl_version;_&dl_part;</defname>
    <jobsub>--expected-lifetime=long</jobsub>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>

</job>
